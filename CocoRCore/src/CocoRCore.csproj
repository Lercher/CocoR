<Project Sdk="Microsoft.NET.Sdk">
  <!-- https://docs.microsoft.com/en-us/dotnet/articles/core/tools/project-json-to-csproj -->
  <PropertyGroup>  
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp1.1</TargetFramework>
    <GenerateFullPaths>true</GenerateFullPaths>
  </PropertyGroup>

  <Target Name="Build-Grammars" AfterTargets="build">
    <Exec Command="dotnet bin/Debug/netcoreapp1.1/CocoRCore.dll -utf8 -frames . -oo         Coco.ATG" />
    <Exec Command="dotnet bin/Debug/netcoreapp1.1/CocoRCore.dll -utf8 -frames . -oo -ac     ../sample-grammars/Taste/Taste.ATG" />
    <Exec Command="dotnet bin/Debug/netcoreapp1.1/CocoRCore.dll -utf8 -frames . -oo -ac     ../sample-grammars/Inheritance/Inheritance.ATG" />
    <Exec Command="dotnet bin/Debug/netcoreapp1.1/CocoRCore.dll -utf8 -frames . -oo -ac -is ../sample-grammars/Coco/Coco.ATG" />
    <Exec Command="dotnet bin/Debug/netcoreapp1.1/CocoRCore.dll -utf8 -frames . -oo -ac     ../sample-grammars/WFModel/WFModel.ATG" />
    <Exec Command="dotnet bin/Debug/netcoreapp1.1/CocoRCore.dll -utf8 -frames . -oo -ac     ../sample-grammars/ExternalTables/ExternalTables.ATG" />
  </Target>
</Project>
