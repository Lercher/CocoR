{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "args": [],
    "echoCommand": true,
    "suppressTaskName": false,
    "tasks": [
        {
            "taskName": "build",
            "args": [],
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "compile-sample-taste",
            "isShellCommand": true,
            "command": "dotnet",
            "args": [
                "${workspaceRoot}/bin/Debug/netcoreapp1.1/CocoRCore.dll",
                "${workspaceRoot}/sample-grammars/Taste/Taste.ATG",
                "-utf8",
                "-is",
                "-o",
                "${workspaceRoot}/sample-grammars/Taste",
                "-frames",
                "${workspaceRoot}/src"
            ]
        },
        {
            "taskName": "compile-sample-coco",
            "isShellCommand": true,
            "command": "dotnet",
            "args": [
                "${workspaceRoot}/bin/Debug/netcoreapp1.1/CocoRCore.dll",
                "${workspaceRoot}/sample-grammars/Coco/Coco.ATG",
                "-utf8",
                "-is",
                "-o",
                "${workspaceRoot}/sample-grammars/Coco",
                "-frames",
                "${workspaceRoot}/src"
            ]
        }
    ]
}